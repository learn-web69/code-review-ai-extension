{
  "manifest_version": 3,
  "name": "AI Core Review Assistant",
  "version": "1.0.0",
  "description": "AI-powered assistant to generate code review walkthroughs for GitHub Pull Requests.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://github.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*/*/pull/*"],
      "js": ["content.js"]
    }
  ]
}
